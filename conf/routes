# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# Post
GET     /                           controllers.PostController.index()
GET     /posts                      controllers.PostController.index()
POST    /posts                      controllers.PostController.insert()
GET     /posts/:postId/detail       controllers.PostController.detail(postId: Long)
GET     /posts/:postId/edit         controllers.PostController.edit(postId: Long)
POST    /posts/update               controllers.PostController.update()
POST    /posts/delete               controllers.PostController.delete()

# Comment
POST    /comment                    controllers.CommentController.insert()

# User
## 認証系
GET     /users/sign-in              controllers.UserController.toSignIn()
POST    /users/sign-in              controllers.UserController.signIn()
GET     /users/sign-up              controllers.UserController.toSignUp()
POST    /users/sign-up              controllers.UserController.signUp()
POST    /users/sign-out             controllers.UserController.signOut()

## ユーザページ
GET     /users/:userId/detail              controllers.UserController.detail(userId:Long)
GET     /users/:userId/edit         controllers.UserController.edit(userId:Long)
POST    /users/update               controllers.UserController.update()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
