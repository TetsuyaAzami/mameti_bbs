# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# Post
GET     /posts                      controllers.PostController.index()
POST    /posts                      controllers.PostController.insert()
GET     /posts/detail/:postId       controllers.PostController.detail(postId: Long)
GET     /posts/edit/:postId         controllers.PostController.edit(postId: Long)
POST    /posts/update               controllers.PostController.update()
POST    /posts/delete               controllers.PostController.delete()

# Comment
POST    /comment                    controllers.CommentController.insert()

# User
GET     /users/sign-in              controllers.UserController.toSignIn()
POST    /users/sign-in              controllers.UserController.signIn()
GET     /users/sign-up              controllers.UserController.toSignUp()
POST    /users/sign-up              controllers.UserController.signUp()
GET     /users/:id                  controllers.UserController.index(id:Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
