# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# Home
GET     /                           controllers.HomeController.index()

# Post
GET     /posts                      controllers.PostController.index()
POST    /posts                      controllers.PostController.insert()
GET     /posts/detail/:id           controllers.PostController.detail(id: Long)
GET     /posts/edit/:id             controllers.PostController.edit(id: Long)
GET     /posts/update               controllers.PostController.update()

# User
GET     /users/:id                  controllers.UserController.index(id:Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
